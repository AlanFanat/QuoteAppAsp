@model IEnumerable<Quote>
@{
    ViewData["Title"] = "Цитаты";
}
<div class="container mt-4">
    <h2>Все цитаты</h2>
    <div class="row">
        @foreach (var quote in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@quote.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@quote.Author</h6>
                        <p class="card-text">@quote.Text</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Details", "Quote", new { id = quote.Id })" class="btn btn-sm btn-outline-primary">Подробнее</a>
                        <div>
                            <button class="btn btn-sm btn-outline-warning" title="В избранное"><i class="bi bi-star"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <a href="@Url.Action("Create", "Quote")" class="btn btn-primary mt-3">Добавить цитату</a>
</div> 